{
  "transform": {
    "^.+\\.tsx?$": [
      "@swc/jest",
      {
        "jsc": {
          "parser": {
            "syntax": "typescript"
          },
          "experimental": {
            "plugins": [
              [
                "jest_workaround",
                {}
              ]
            ]
          },
          "target": "es2022"
        },
        "module": {
          "type": "commonjs",
          "ignoreDynamic": true
        },
        "sourceMaps": true
      }
    ]
  },
  "testEnvironment": "node",
  "setupFilesAfterEnv": [
    "<rootDir>/src/tests/testSetup.ts"
  ],
  "collectCoverageFrom": [
    "./src/**"
  ],
  "verbose": true,
  "testPathIgnorePatterns": [
    "dist/"
  ]
}