{
  "transform": {
    "^.+\\.tsx?$": [
      "@swc/jest"
    ]
  },
  "testEnvironment": "node",
  "setupFilesAfterEnv": [
    "<rootDir>/src/tests/testSetup.ts"
  ],
  "collectCoverageFrom": [
    "./src/**"
  ],
  "coveragePathIgnorePatterns": [
    "<rootDir>/src/commands/"
  ],
  "verbose": true,
  "testPathIgnorePatterns": [
    "dist/"
  ],
  "extensionsToTreatAsEsm": [
    ".ts",
    ".tsx"
  ]
}